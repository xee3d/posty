# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
FIREBASE_APP_ID=your_firebase_app_id_here

# Google Sign In - Firebase Console에서 복사
GOOGLE_WEB_CLIENT_ID=your_google_web_client_id_here

# Social Media OAuth
NAVER_CONSUMER_KEY=your_naver_consumer_key_here
NAVER_CONSUMER_SECRET=your_naver_consumer_secret_here
KAKAO_APP_KEY=your_kakao_app_key_here

# Server Configuration
API_URL=https://posty-api.vercel.app
SERVER_URL=https://posty-api.vercel.app

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_CLIENT_TOKEN=your_facebook_client_token_here

# Mock System Configuration
USE_FIREBASE=false
FIREBASE_READY=false
MOCK_SYSTEM_ENABLED=true

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=debug
ENVIRONMENT=development
APP_VERSION=1.0.0
