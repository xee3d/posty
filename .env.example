# Posty App Environment Variables
# Copy this file to .env and update with your values

# API Server Configuration
API_BASE_URL=https://posty-server-new.vercel.app/api
API_SECRET=posty-secret-key-change-this-in-production

# Development API (optional)
DEV_API_BASE_URL=http://10.0.2.2:3000/api

# Firebase Configuration (optional)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Google Sign-In (optional)
GOOGLE_WEB_CLIENT_ID=your-google-client-id

# AdMob Configuration (optional)
ADMOB_APP_ID_ANDROID=ca-app-pub-xxxxx
ADMOB_APP_ID_IOS=ca-app-pub-xxxxx

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_ANALYTICS=true
ENABLE_CRASH_REPORTING=true

# App Configuration
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1
